<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>

        <rotate
            android:fromDegrees="-45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%" >
            <shape

                android:shape="line"
                android:top="0dp" >
                <stroke
                    android:width="10dp"
                    android:color="#696969" />
                <corners
                    android:color="#0078a5"
                    />
            </shape>
        </rotate>
    </item>


</layer-list>