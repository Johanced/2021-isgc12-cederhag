<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#454545"
    tools:context=".activity_main">

    <GridLayout
        android:id="@+id/GridLayoutBtns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:columnCount="7"
        android:orientation="horizontal"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:text="A"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:text="B"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:text="C"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:text="D"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:text="E"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button6"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:text="F"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button8"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="G"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button10"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="H"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button11"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="I"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button12"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="J"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button13"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="K"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button14"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="L"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button15"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="M"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button16"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="N"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button17"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="O"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button18"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="P"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button27"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="Q"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button28"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="R"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button29"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="S"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button30"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="T"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button31"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="U"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button32"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="V"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button33"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="W"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button34"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="X"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button35"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="Y"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button36"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="Z"
            android:textColor="#000000"
            tools:ignore="HardcodedText,TextContrastCheck" />


    </GridLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/GridLayoutBtns"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="Hangman"
            android:textColor="@color/light_font"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="347dp"
            android:layout_height="256dp"
            android:layout_marginBottom="5dp">

            <View
                android:id="@+id/stepThree"
                android:layout_width="48dp"
                android:layout_height="54dp"
                android:background="@drawable/horizontal_line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.315"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.92" />

            <View
                android:id="@+id/stepOne"
                android:layout_width="163dp"
                android:layout_height="15dp"
                android:background="@drawable/rectangle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.923" />

            <View
                android:id="@+id/stepSix"
                android:layout_width="3dp"
                android:layout_height="69dp"
                android:layout_weight="0"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.611"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.272" />

            <View
                android:id="@+id/stepFive"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/horizontal_line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.419"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.193" />


            <View
                android:id="@+id/stepFour"
                android:layout_width="105dp"
                android:layout_height="14dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.181" />

            <View
                android:id="@+id/stepTwo"
                android:layout_width="14dp"
                android:layout_height="220dp"
                android:background="@drawable/rectangle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.369"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <View
                android:id="@+id/stepSeven"
                android:layout_width="158dp"
                android:layout_height="146dp"
                android:background="@drawable/stickman_hang"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.687"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.827" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/guessingWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.35"
            android:text="Text"
            android:textColor="#141414"
            android:textSize="38sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextContrastCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="104dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/GridLayoutBtns"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.493">

        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.1"
            android:text="You Won/Lose"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/restartBtn"
                android:layout_width="125dp"
                android:layout_height="58dp"
                android:backgroundTint="#929292"
                android:onClick="restartClicked"
                android:text="Restart"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/menuBtn"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:backgroundTint="#929292"
                android:onClick="menuClicked"
                android:text="Menu"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>