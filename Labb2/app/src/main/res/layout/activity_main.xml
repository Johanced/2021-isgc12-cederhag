            android:text="L"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button15"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="M"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/button16"
